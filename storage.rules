rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Users can read and write their own profile images
    match /users/{userId}/profile/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own cover photos
    match /users/{userId}/cover/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own movie images
    match /users/{userId}/movies/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own photos
    match /users/{userId}/photos/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public read access for movie posters and backdrops
    match /movies/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Public read access for system images
    match /system/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Reports: authenticated users can write their own reports
    match /reports/{reporterId}/{reportedUserId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == reporterId;
      allow read: if request.auth != null;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
